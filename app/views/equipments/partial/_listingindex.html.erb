<div class="container">
  <div class="row pb-5 mb-4">

    <% equipments.each do |equipment| %>
    <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
        <!-- Card-->
        <div class="card rounded shadow-sm border-1 mt-3">
            <div class="card-body p-4"><img src="<% if equipment.image.key? %><%= cl_image_path equipment.image.key, height: 200, crop: :pad
              %><% else 
              %>https://resources.sport-tiedje.com/bilder/firstdegreefitness/neu2/Viking%20PRO%20V/Viking_Pro_V_02_600.jpg<% 
              end %>" alt="" class="img-fluid d-block mx-auto mb-3">
                <h5><%= equipment.title %><br><%= link_to 'More details', equipment_path(equipment) %> <%= link_to 'Rent',  new_equipment_rent_path(@rent, equipment_id: equipment.id) %></h5>
            </div>
        </div>
    </div>
    <% end %>

  </div>
</div>