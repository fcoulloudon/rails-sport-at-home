<div class="container">
  <div class="form-wrapper" style="width: 600px; margin: 0 auto;">
    <h1>New equipment</h1>

    <%= simple_form_for ([@equipment]) do |f| %>
      <%= f.input :title, label: "Enter your equipment title:" %>
      <%= f.input :description, label: "Enter your equipment description:" %>
      <%= f.submit %>
    <% end %>
  </div>
</div>