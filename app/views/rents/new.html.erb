<div class="container">
  <div class="form-wrapper" style="width: 600px; margin: 0 auto;">
    <h1>New rent for <%= @equipment.title %></h1>

    <%= simple_form_for ([@equipment, @rent]) do |f| %>
      <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
      <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
