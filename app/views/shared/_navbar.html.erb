
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/df8y5fexl/image/upload/v1620334948/logo_sah_w4lqxy.png", alt: "test" %>
  <% end %>

  <div class="div-navbar-spacing">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto spacing-navbar">
        <li class="nav-item">
          <%= link_to "Home", root_path , class: "btn btn-menu" %>
        </li>
        <li class="nav-item">
          <%= link_to "All Equipments", equipments_path , class: "btn btn-equipment" %>
        </li>
        <% if current_user %>
          <li class="nav-item">
            <%= link_to "My Rents", user_rents_path(current_user.id) , class: "btn btn-equipment" %>
          </li>
        <% end %>
        <% if (current_user != nil && current_user.user_type === "User") %>
        <% elsif (current_user != nil && current_user.user_type === "Owner") %>
          <li class="nav-item">
            <%= link_to "My equipments",  myequipments_path() , class: "btn btn-equipment" %>
          </li>
          <li class="nav-item">
          <%= link_to new_user_equipment_path(:user_id), class: "btn btn-book" do %>
            <i class="fas fa-plus"></i> Add an equipment
          <% end %>
        </li>
        <% else %>
        <% end %>
        <li class="nav-item dropdown">
          <%= image_tag "https://res.cloudinary.com/df8y5fexl/image/upload/v1620334940/avatar_odv4sq.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
          <% if current_user.user_type == "User" %>
              <div class="dropdown-item" style="font-weight: 600;">User menu</div>
            <% else %>
              <div class="dropdown-item" style="font-weight: 600;">Owner menu</div>
            <% end %>
            <%= link_to 'Sign out', destroy_user_session_path, :method => :delete, class: "dropdown-item" %>
          <% else %>
            <%= link_to 'Register', new_user_registration_path, class: "dropdown-item" %>
            <%= link_to 'Sign in', new_user_session_path, class: "dropdown-item" %>
          <% end %>
          </div>
        </li>
      </ul>
    </div>
   </div>
</div>
